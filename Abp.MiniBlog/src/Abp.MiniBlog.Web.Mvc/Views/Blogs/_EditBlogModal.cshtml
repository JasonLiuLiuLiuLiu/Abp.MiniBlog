@using Abp.MiniBlog.Web.Models.Common.Modals
@model Abp.MiniBlog.Web.Models.Blogs.EditBlogModalViewModel
@{
    Layout = null;
}
@Html.Partial("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("EditBlog")))

<div class="modal-body">
    <form name="BlogEditForm" role="form" novalidate class="form-validation">
        <input type="hidden" name="Id" value="@Model.Blog.Id" />
        <ul class="nav nav-tabs tab-nav-right" role="tablist">
            <li role="presentation" class="active"><a href="#edit-user-details" data-toggle="tab">@L("BlogDetails")</a></li>
        </ul>
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane animated fadeIn active" id="edit-user-details">

                <div class="row clearfix" style="margin-top:10px;">
                    <div class="col-sm-12">
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input id="username" type="text" name="UserName" value="@Model.Blog.Content" required maxlength="32" minlength="2" class="validate form-control">
                                <label for="username" class="form-label">@L("Content")</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

           

        </div>
    </form>
</div>

@Html.Partial("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")

<script src="~/view-resources/Views/Blogs/_EditBlogModal.js" asp-append-version="true"></script>
